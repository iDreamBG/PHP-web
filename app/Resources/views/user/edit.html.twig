{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" enctype="multipart/form-data"
                  action="{{ path('profile_edit', {id: currentUser.id}) }}" method="POST">
                <fieldset>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="currentUser">Емайл</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="currentUser_email" placeholder="Email"
                                   name="currentUser[email]" value="{{ currentUser.email }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="currentUser_fullName">Име</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="currentUser_fullName" placeholder="Full Name"
                                   name="currentUser[fullName]" value="{{ currentUser.fullName }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="currentUser_image">Снимка</label>
                        <div class="col-sm-4 ">
                            <input type="file" class="form-control" id="currentUser_image" placeholder="Image"
                                   name="currentUser[image]">
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('user_profile') }}">Отказ</a>
                            <button type="submit" class="btn btn-success">Промени</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>


{% endblock %}

