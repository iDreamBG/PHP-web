{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal"
                  action="{{ path('profile_delete', {'id': currentUser.id}) }}" method="POST">
                <fieldset>


                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_email">Емайл</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="user_email" placeholder="Email"
                                   name="user[email]" value="{{ currentUser.email }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_fullName">Име</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" id="user_fullName" placeholder="Full Name"
                                   name="user[fullName]" value="{{ currentUser.fullName }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_password">Парола</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="user_password" placeholder="Password"
                                   name="user[password]" value="{{ currentUser.password }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_image">Снимка</label>
                        <div class="col-sm-4 ">
                            <input type="file" class="form-control" id="user_image" placeholder="Image"
                                   name="user[image]" value="{{ currentUser.image }}">
                        </div>
                    </div>


                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('all_users') }}">Отказ</a>
                            <button type="submit" class="btn btn-danger">Изтрий</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}